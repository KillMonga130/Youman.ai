# Backend Environment Variables
# Copy this file to .env for local development
# For production, set these in Railway/Render Dashboard â†’ Environment Variables

# Environment
NODE_ENV=production
PORT=3001

# CORS Origins - Comma-separated list of allowed frontend URLs
# IMPORTANT: Include ALL possible frontend URLs (Vercel URL, custom domain, localhost)
# Example:
# CORS_ORIGINS=https://youman.droidver130.com,https://your-app.vercel.app,http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Database URLs
DATABASE_URL=postgresql://user:password@host:5432/dbname
MONGODB_URI=mongodb://user:password@host:27017/dbname
REDIS_URL=redis://host:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Storage (AWS S3 or Cloudflare R2)
# For Cloudflare R2:
S3_BUCKET=your-bucket-name
S3_REGION=auto
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-r2-access-key
S3_SECRET_KEY=your-r2-secret-key

# For AWS S3:
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key

# AWS Bedrock (for LLM inference)
AWS_REGION=us-east-1
AWS_BEDROCK_ENABLED=true

# API Keys (Optional - only if using these services)
# GPTZERO_API_KEY=
# ORIGINALITY_API_KEY=
# TURNITIN_API_KEY=
# COPYSCAPE_API_KEY=
# GRAMMARLY_API_KEY=
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=

# Stripe (Optional - only if using payments)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Cloud Storage (Optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# DROPBOX_CLIENT_ID=
# DROPBOX_CLIENT_SECRET=
# ONEDRIVE_CLIENT_ID=
# ONEDRIVE_CLIENT_SECRET=

