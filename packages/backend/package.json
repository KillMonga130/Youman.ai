{
  "name": "@ai-humanizer/backend",
  "version": "1.0.0",
  "description": "AI Humanizer Backend API Service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "build:skip-prisma": "echo 'Skipping Prisma generate - will generate at runtime' && tsc",
    "postinstall": "prisma generate || echo 'Prisma generate skipped - will generate at runtime'",
    "start": "node -e \"require('child_process').execSync('npx prisma generate', {stdio: 'inherit'})\" 2>/dev/null || node dist/index.js",
    "start:direct": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "test:bedrock": "tsx scripts/test-bedrock.ts"
  },
  "dependencies": {
    "@ai-humanizer/shared": "1.0.0",
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/client-sts": "^3.940.0",
    "@prisma/client": "^6.19.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dropbox": "^10.34.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fast-check": "^4.3.0",
    "franc-min": "^6.2.0",
    "googleapis": "^166.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "natural": "^8.1.0",
    "node-cron": "^4.2.1",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "@google/generative-ai": "^0.2.0",
    "nodemailer": "^7.0.11",
    "prisma": "^6.19.0",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "stripe": "^20.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4",
    "multer": "^1.4.5-lts.1",
    "adm-zip": "^0.5.16",
    "pdf-parse": "^1.1.1",
    "@aws-sdk/client-bedrock": "^3.940.0",
    "@aws-sdk/client-bedrock-runtime": "^3.940.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.96",
    "@types/natural": "^5.1.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@types/multer": "^1.4.11",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4"
  }
}
